{
    "manifest_version": 2,
    "name": "Track Social Media Time",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Ver tiempo en redes sociales"
    }
  }
  